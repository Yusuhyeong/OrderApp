<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="home_view_model"
            type="com.samgye.orderapp.activity.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HomeActivity"
        android:background="@color/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/sv_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/icon_menu"
                android:onClick="@{(v)->home_view_model.menuClick(v)}"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:src="@drawable/logo3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_logo"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_annotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v)->home_view_model.menuClick(v)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_annotation"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/icon_annotation"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_annotation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_annotation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="공지사항입니다."
                        android:textColor="@color/font"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_annotation"
                        app:layout_constraintEnd_toStartOf="@id/iv_annotation_arrow"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@id/iv_annotation"
                        app:layout_constraintTop_toTopOf="@id/iv_annotation" />

                    <ImageView
                        android:id="@+id/iv_annotation_arrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/icon_arrow_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_annotation"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_goneMarginEnd="5dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_event"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dummy_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_annotation"
                    app:layout_constraintVertical_bias="0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_dummy"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@id/cl_event"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_event" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_radius_top_40dp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cl_dummy" >

                    <TextView
                        android:id="@+id/tv_login_annotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그인 후 이용해주세요"
                        android:textSize="20dp"
                        android:visibility="@{home_view_model.is_login_status ? View.GONE : View.VISIBLE}"
                        android:fontFamily="@font/pretendard_bold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@id/cl_store_eat"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:visibility="@{home_view_model.is_login_status ? View.VISIBLE : View.GONE}"
                        android:fontFamily="@font/pretendard_bold"
                        app:layout_constraintStart_toStartOf="@id/cl_store_eat"
                        app:layout_constraintTop_toBottomOf="@id/tv_login_annotation"
                        android:text="@{home_view_model.userData.userName}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:visibility="@{home_view_model.is_login_status ? View.VISIBLE : View.GONE}"
                        android:fontFamily="@font/pretendard_bold"
                        app:layout_constraintStart_toEndOf="@id/tv_username"
                        app:layout_constraintTop_toTopOf="@id/tv_username"
                        app:layout_constraintBottom_toBottomOf="@id/tv_username"
                        android:text="님 안녕하세요" />

                    <TextView
                        android:id="@+id/tv_point_title"
                        android:text="포인트"
                        android:textSize="18dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:visibility="@{home_view_model.is_login_status ? View.VISIBLE : View.GONE}"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/tv_username"
                        app:layout_constraintTop_toBottomOf="@id/tv_username" />

                    <TextView
                        android:id="@+id/tv_point_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(home_view_model.userData.point)}"
                        android:visibility="@{home_view_model.is_login_status ? View.VISIBLE : View.GONE}"
                        android:textSize="30dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/pretendard_bold"
                        app:layout_constraintStart_toStartOf="@id/tv_point_title"
                        app:layout_constraintTop_toBottomOf="@id/tv_point_title" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textSize="30dp"
                        android:visibility="@{home_view_model.is_login_status ? View.VISIBLE : View.GONE}"
                        android:fontFamily="@font/pretendard_bold"
                        app:layout_constraintStart_toEndOf="@id/tv_point_info"
                        app:layout_constraintTop_toTopOf="@id/tv_point_info"
                        app:layout_constraintBottom_toBottomOf="@id/tv_point_info" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_store_eat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:onClick="@{(v)->home_view_model.menuClick(v)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cl_take_out"
                        app:layout_constraintTop_toBottomOf="@id/tv_point_info" >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/iv_store_eat"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/border_radius_40dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/tv_store_eat" />

                        <TextView
                            android:id="@+id/tv_store_eat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매장 식사"
                            android:textSize="18dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_store_eat"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_take_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:onClick="@{(v)->home_view_model.menuClick(v)}"
                        app:layout_constraintStart_toEndOf="@id/cl_store_eat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/cl_store_eat"
                        app:layout_constraintBottom_toBottomOf="@id/cl_store_eat" >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/iv_take_out"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/border_radius_40dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/tv_take_out" />

                        <TextView
                            android:id="@+id/tv_take_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="포장 주문"
                            android:textSize="18dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:layout_marginTop="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_take_out"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_store_eat"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_dummy_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{home_view_model.is_menu_visible ? View.VISIBLE : View.GONE}"
            android:background="@color/dummy_background_color"
            android:onClick="@{(v)->home_view_model.menuClick(v)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 상단 메뉴 레이아웃 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_menu"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:onClick="@{(v)->home_view_model.menuCategoryClick(v)}"
            android:visibility="@{home_view_model.is_menu_visible ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                android:id="@+id/tv_test_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 테스트"
                android:textSize="20dp"
                android:visibility="@{home_view_model.is_login_status ? View.GONE : View.VISIBLE}"
                android:onClick="@{(v)->home_view_model.menuClick(v)}"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>