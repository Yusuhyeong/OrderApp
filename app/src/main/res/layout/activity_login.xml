<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="login_view_model"
            type="com.samgye.orderapp.activity.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/btn_google_login"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:text="구글 로그인"
            android:textColor="@color/font"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintStart_toStartOf="@id/btn_kakao_login"
            app:layout_constraintEnd_toEndOf="@id/btn_kakao_login"
            app:layout_constraintBottom_toTopOf="@id/btn_kakao_login" />

        <ImageView
            android:id="@+id/btn_kakao_login"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_kakao_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>